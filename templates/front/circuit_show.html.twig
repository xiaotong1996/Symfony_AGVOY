{% extends 'base.html.twig' %}

{% block body %}
<h1>Programmation Circuit {{programmation_circuit.id}}</h1>
<a href="{{ path('front_circuit_like', {id: programmation_circuit.id}) }}">like</a>


 <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ programmation_circuit.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ programmation_circuit.circuit.description }}</td>
            </tr>
            <tr>
                <th>DateDepart</th>
                <td>{{ programmation_circuit.dateDepart ? programmation_circuit.dateDepart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NombrePersonnes</th>
                <td>{{ programmation_circuit.nombrePersonnes }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ programmation_circuit.prix }}</td>
            </tr>
        </tbody>
    </table>

    
    
     <h2 id="circuittitle">Circuit</h2>
     <button id="button1" class="btn">Show/Hide</button>

   <table class="table" id="Circuit">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ programmation_circuit.circuit.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ programmation_circuit.circuit.description }}</td>
            </tr>
            <tr>
                <th>PaysDepart</th>
                <td>{{ programmation_circuit.circuit.paysDepart }}</td>
            </tr>
            <tr>
                <th>VilleDepart</th>
                <td>{{ programmation_circuit.circuit.villeDepart }}</td>
            </tr>
            <tr>
                <th>VilleArrivee</th>
                <td>{{ programmation_circuit.circuit.villeArrivee }}</td>
            </tr>
            <tr>
                <th>DureeCircuit</th>
                <td>{{ programmation_circuit.circuit.dureeCircuit }}</td>
            </tr>
        </tbody>
    </table>
 
     <hr>
    <h2>Etapes</h2>
     <button id="myShowHidebtn" class="btn">Show/Hide</button>
    <table class="table" id="Etape">
  <thead>
    <tr>
        <th>Numéro</th>
        <th>villeEtape</th>
        <th>nombreJours</th>
    </tr>
  </thead>


  {%  for etape in programmation_circuit.circuit.etapes %}
  <tr>
    <td>{{ etape.numeroEtape }}</td>
    <td>{{ etape.villeEtape }}</td>
    <td>{{ etape.nombreJours }}</td>
  </tr>
  {% else %}
    <tr>
        <td colspan="2">no etape found</td>
    </tr>
  {% endfor %} {# etapes #}
</table>


